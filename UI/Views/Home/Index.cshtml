@model List<Sehir>

<!doctype html>
<html lang="tr">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="~/bootstrap-5.3.0-alpha2-dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-2">
        <table id="myTable" class="table table-striped table-bordered table-hover table-sm">
            <div class="text-lg-end pr-2 my-2">
                <a asp-action="Add" asp-controller="Home" class="btn btn-primary">ekle</a>
            </div>
             

            <thead>
                <tr>
                    <td>Sehir Id</td>
                    <td>Sehir İsmi</td>
                    <td>Ulke İsmi</td>

                    <td>Guncelle</td>
                    <td>Sil</td>


                </tr>
            </thead>
            <tbody>

                    @foreach (var item in Model)
                    {
                    <tr>

                        <td>@item.Id</td>
                        <td>@item.SehirAdi</td>
                        <td>@item.UlkeAdi</td>



                        <td>
                            <a asp-action="Edit" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-warning">Güncelle</a>
                        </td> 
                        |
                        <td><a asp-action="Delete" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-danger">Sil</a></td>
                            
                       
                    </tr>

                    }


            </tbody>
        </table>
    </div>
   
</body>
 
 
</html>
