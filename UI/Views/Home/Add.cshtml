@model Sehir

@{
    Layout = null;
}
<!doctype html>
<html lang="tr">

<head>
    
    <link href="~/bootstrap-5.3.0-alpha2-dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-2">
            
                <form asp-action="Add" asp-controller="Home" method="post">

                    <div class="form-group">
                        <label>Sehir İsmi:</label>
                        <input type="text" asp-for="SehirAdi" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Ülke İsmi:</label>
                        <input type="text" asp-for="UlkeAdi" class="form-control" />
                    </div>


                    <div class="form-group">
                     
                        <button type="submit" class="btn btn-primary">Kaydet</button>

                    </div>

                    <div asp-validation-summary="ModelOnly" class="text-bg-danger">

                    </div>


                </form>
            


           
        
    </div>

</body>


</html>